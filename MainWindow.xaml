<Window x:Class="WpfEmailScraper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email Scraper 1.0" Height="224.667" Width="405.999" Icon="Icon1.ico" ResizeMode="CanMinimize" WindowState="Minimized" Cursor="SizeWE">
    <Grid Margin="0,0,32,0">
        <TextBox x:Name="URLTextBox" HorizontalAlignment="Left" Height="23" Margin="46,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258" GotFocus="URLTextBox_GotFocus"/>
        <Button x:Name="ScrapeEmailsButton" Content="Scrape Emails" Margin="10,48,0,0" VerticalAlignment="Top" Click="ScrapeEmailsButton_Click" IsDefault="True" HorizontalAlignment="Left" Width="347" IsCancel="True"/>
        <ListBox x:Name="ResultsListBox" Height="107" Margin="10,75,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="343"/>
        <Label Content="URL" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ClearURLTextBoxButton" Content="Clear" HorizontalAlignment="Left" Margin="309,17,0,0" VerticalAlignment="Top" Width="48" Click="ClearURLTextBoxButton_Click"/>

    </Grid>
</Window>
